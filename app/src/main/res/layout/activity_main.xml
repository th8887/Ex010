<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Space
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="10" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv31"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:text="TextView" />

            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/tv21"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:text="TextView" />

            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/tv11"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv32"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:text="TextView" />

            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/tv22"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:text="TextView" />

            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/tv12"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="10"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:ems="5"
                android:hint="enter sum"
                android:inputType="number" />

            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:ems="5"
                android:hint="enter sum"
                android:inputType="number" />

            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:ems="5"
                android:hint="enter sum"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="15"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:onClick="level3"
                android:text="check level 3" />

            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:onClick="level2"
                android:text="check level 2" />

            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:onClick="level1"
                android:text="check level 1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30" />

            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30" />

            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="5" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="10"
            android:orientation="horizontal">

            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="10" />

            <Button
                android:id="@+id/btn"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:onClick="start"
                android:text="New" />

            <Space
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="10" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50" />

    </LinearLayout>

    <Space
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="10" />

</LinearLayout>